<div>
    <form method="post">
        <h3>Add new course</h3>

        <div class="form-group">
            <label for="title">Title</label>
            <input type="text"
                    name="title"
                    id="title"
                    class="form-control"
                    value=""
                    title=""
                    required="required"
                    ng-model="formData.title">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea type="text"
                    name="description"
                    id="description"
                    class="form-control"
                    value=""
                    title=""
                    rows="3"
                    ng-model="formData.description"></textarea>
        </div>

        <div class="form-group">
            <label for="language">Language</label>
            <input type="text"
                    name="language"
                    id="language"
                    class="form-control"
                    value=""
                    title=""
                    ng-model="formData.language">
        </div>

        <div class="form-group">
            <label for="experienceLevel">Experience level</label>
            <input type="number"
                    name="experienceLevel"
                    id="experienceLevel"
                    class="form-control"
                    value="0"
                    title=""
                    ng-model="formData.experienceLevel">
        </div>

        <div class="form-group">
            <label for="imageUrl">Image URL</label>
            <input type="text"
                    name="imageUrl"
                    id="imageUrl"
                    class="form-control"
                    value="http://" title=""
                    ng-model="formData.imageUrl">
        </div>

        <!-- // TODO: ADD EDIT AND UPDATE FUNCTIONS. -->
        <button type="submit" class="btn btn-primary" ng-click="postCourse()">Submit</button>
        <button type="submit" class="btn btn-info" ng-click="update()">Update</button>
    </form>
</div>